<script>
const audio = document.getElementById("audio");
let seconds = 10;

const timer = setInterval(() => {
  seconds--;
  document.getElementById("count").innerText = seconds;
  if (seconds === 0) {
    clearInterval(timer);
    document.getElementById("countdownText").innerText =
      "The recording is now playing.";
    audio.play().catch(() => {
      document.getElementById("countdownText").innerText =
        "The recording is ready. Click play to start.";
      audio.controls = true;
    });
  }
}, 1000);

// 音频结束 → 自动提交
audio.addEventListener("ended", () => {
  submitTest();
});

function submitTest() {
  // 这里后续可接评分页
  window.location.href = "../result.html";
}
</script>

